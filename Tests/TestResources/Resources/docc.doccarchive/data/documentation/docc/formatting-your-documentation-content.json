tion","title":"Add Code Listings","identifier":"doc:\/\/org.swift.docc\/documentation\/docc\/formatting-your-documentation-content#Add-Code-Listings","type":"topic","url":"\/documentation\/docc\/formatting-your-documentation-content#Add-Code-Listings","abstract":[]},"doc://org.swift.docc/documentation/docc/customizing-the-appearance-of-your-documentation-pages":{"type":"topic","title":"Customizing the Appearance of Your Documentation Pages","role":"article","url":"\/documentation\/docc\/customizing-the-appearance-of-your-documentation-pages","abstract":[{"text":"Customize the look and feel of your documentation webpages.","type":"text"}],"identifier":"doc:\/\/org.swift.docc\/documentation\/docc\/customizing-the-appearance-of-your-documentation-pages","kind":"article"},"doc://org.swift.docc/documentation/docc/adding-tables-of-data":{"abstract":[{"text":"Arrange information into rows and columns.","type":"text"}],"type":"topic","title":"Adding Tables of Data","identifier":"doc:\/\/org.swift.docc\/documentation\/docc\/adding-tables-of-data","url":"\/documentation\/docc\/adding-tables-of-data","role":"article","kind":"article"},"doc://org.swift.docc/documentation/docc":{"kind":"symbol","url":"\/documentation\/docc","type":"topic","abstract":[{"type":"text","text":"Produce rich API reference documentation and interactive tutorials for your Swift framework or package."}],"identifier":"doc:\/\/org.swift.docc\/documentation\/docc","title":"DocC","role":"collection"},"https://daringfireball.net/projects/markdown/syntax":{"titleInlineContent":[{"type":"text","text":"Markdown"}],"type":"link","title":"Markdown","url":"https:\/\/daringfireball.net\/projects\/markdown\/syntax","identifier":"https:\/\/daringfireball.net\/projects\/markdown\/syntax"}}}